# Sirabas Scraping Environment Variables
# このファイルをプロジェクトルートの .env にコピーして、実際の値を設定してください

# Google Sheets API設定
# Google Cloud Consoleで取得した認証情報
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id-here

# スクレイピング対象のURL（オプション）
# config.yamlの設定を上書きする場合に使用
SCRAPING_BASE_URL=https://actual-syllabus-url.com

# ログレベル（オプション）
# DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# データベース設定（オプション）
DATABASE_PATH=data/sirabas.db

# 並行処理設定（オプション）
MAX_WORKERS=5
RATE_LIMIT_SECONDS=1

# プロキシ設定（必要な場合）
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080

# デバッグモード（オプション）
DEBUG=false

# キャッシュ設定（オプション）
CACHE_ENABLED=true
CACHE_TTL=3600 